    print("\n_dwAdd\n"); // DEBUG
        
    // 駆動輪は前後方向と上下方向にCVを用意させる
    vector $dw_f[], $dw_r[];
    $_dw = bubbleSortVector($_dw, "z");
    $r45 = 0.70710678118 * $dwRadius; // 45度の点
    $_dw_first = $_dw[0]; // 前の駆動輪
    $dw_f[size($dw_f)] = << $_dw_first.x, ($_dw_first.y - $dwRadius), $_dw_first.z >>; // 下
    $dw_f[size($dw_f)] = << $_dw_first.x, ($_dw_first.y - $r45), ($_dw_first.z - $r45) >>;
    $dw_f[size($dw_f)] = << $_dw_first.x, $_dw_first.y, ($_dw_first.z - $dwRadius) >>; // 前
    $dw_f[size($dw_f)] = << $_dw_first.x, ($_dw_first.y + $r45), ($_dw_first.z - $r45) >>;
    $dw_f[size($dw_f)] = << $_dw_first.x, ($_dw_first.y + $dwRadius), $_dw_first.z >>; // 上
    $_dw_last = $_dw[size($_dw) - 1]; // 後ろの駆動輪
    $dw_r[size($dw_r)] = << $_dw_last.x, ($_dw_last.y + $dwRadius), $_dw_last.z >>; // 上
    $dw_r[size($dw_r)] = << $_dw_last.x, ($_dw_last.y + $r45), ($_dw_last.z + $r45) >>; // 
    $dw_r[size($dw_r)] = << $_dw_last.x, $_dw_last.y, ($_dw_last.z + $dwRadius) >>; // 後ろ
    $dw_r[size($dw_r)] = << $_dw_last.x, ($_dw_last.y - $r45), ($_dw_last.z + $r45) >>; // 
    $dw_r[size($dw_r)] = << $_dw_last.x, ($_dw_last.y - $dwRadius), $_dw_last.z >>; // 下
    $_dw = {};
    
    print("_dw  sorted\n");
    
    // 上部固定輪
    for($w in getTextFieldObjects($fws)){
        $_pos = `xform -q -ws -t $w`;
        float $x = $_pos[0];
        float $y = $_pos[1] + $fwRadius;
        float $z = $_pos[2];
        
        $_dw[size($_dw)] = << $x, $y, $z>>;
    }
    
    print($_dw);
    print("\nfixedWheels added _dw\n"); // DEBUG
   
    
    // Sort
    $_dw = bubbleSortVector($_dw, "z");
    $points = bubbleSortVector($points, "z");
    $points = reverseArray($points);
    
    // append
    for($cv in $dw_f)
        $points[size($points)] = $cv;
    for($cv in $_dw)
        $points[size($points)] = $cv;
    for($cv in $dw_r)
        $points[size($points)] = $cv;
    
    // カーブに追加
    string $curve = "none";
    for($cv in $points){
        $x = $cv.x;
        $y = $cv.y;
        $z = $cv.z;
        if($curve == "none"){
            $curve = `curve -d 1 -p $x $y $z`;
        }else{
            curve -a -p $x $y $z $curve;
        }
    }
    rename $curve "trackPathCurve";
}

// 作成したパスのカーブを「閉じる」「リビルド」「拡大」する
proc rebuildPathCurve(){
    float $scale = 1.05;
    string $curve = `textField -q -tx PATHCURVE_FIELD`;
    // Pivotを中央に
    float $curveCenter[] = getCurveCenter($curve);
    print "PIVOT\n";
    print $curveCenter;
    print ("\n");
    float $cx = $curveCenter[0];
    float $cy = $curveCenter[1];
    float $cz = $curveCenter[2];
    
    move -a $cx $cy $cz ($curve+".scalePivot") ($curve+".rotatePivot");
    
    closeCurve -ch 1 -ps 1 -rpo 1 -bb 0.5 -bki 0 -p 0.1 $curve;
    rebuildCurve -ch 1 -rpo 1 -rt 0 -end 1 -kr 2 -kcp 1 -kep 1 -kt 0 -s 18 -d 2 -tol 1e-06 $curve;
    select $curve;
    scale -r $scale ;
}

// 履帯のカーブのピボットを中央に戻し、履帯の先頭ジョイントをそこに合わせる
proc alignPathAndTrack(){
    string $curve = `textField -q -tx PATHCURVE_FIELD`;
    string $startJoint = `textField -q -tx RITAI_FIELD`;
    
    select -r $curve;
    CenterPivot;
    xform -cpc;
    
    float $pivot[] = getAttr($curve + ".scalePivot");
    move -ws -a $pivot[0] $pivot[1] $pivot[2] $startJoint;
    
}

// ベクター配列のソート
proc vector[] bubbleSortVector(vector $v[], string $sortval){
    $changed = true;
    $s = size($v);
    while($changed){
        $changed = false;
        for($i = 0; $i < $s - 1; $i++){
            $bool = false;
            $va = $v[$i];
            $vb = $v[$i + 1];
            switch($sortval){
                case "x":
                    $bool = $va.x > $vb.x;
                    break;
                case "y":
                    $bool = $va.y > $vb.y;
                    break;
                case "z":
                    $bool = $va.z > $vb.z;
                    break;
            }
            if($bool){
                // 入れ替え
                $v[$i] = $vb;
                $v[$i + 1] = $va;
                $changed = true;
            }
        }
    }
    return $v;
}

// カーブの中心を取得
proc float[] getCurveCenter(string $curve){
    float $spans = getAttr($curve + ".spans");
    float $ax, $ay, $az;
    for($i = 0; $i < $spans; $i++){
        float $t[] = getAttr($curve + ".cv[" + $i + "]");
        $ax += $t[0];
        $ay += $t[1];
        $az += $t[2];
    }
    $ax /= $spans;
    $ay /= $spans;
    $az /= $spans;
    return ({ $ax, $ay, $az });
}

// 配列のリバース
proc vector[] reverseArray(vector $v[]){
    vector $r[];
    int $size = size($v);
    for($i = 0; $i < $size; $i++){
        $r[$i] = $v[$size - 1 - $i];
    }
    return $r;
}

