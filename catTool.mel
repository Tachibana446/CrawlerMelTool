    vector $points[];    // CV
    int $size = 0;
    
    $wheels = getTextFieldObjects($ws);
    for($w in $wheels){
        print $w;
        $_pos = `xform -q -ws -t $w`;
        float $x = $_pos[0];
        float $y = $_pos[1] - $radius;
        float $z = $_pos[2];
        
        $points[$size] = << $x, $y, $z >>;
        $size++;
    }
    
    
    $driveWheels = getTextFieldObjects($dws);
    print($driveWheels); //DEBUG
    $dwRadius = $radius;
